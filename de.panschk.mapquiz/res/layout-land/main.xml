<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:contentDescription="@string/welcome_to_mapquiz"
        android:src="@drawable/icon" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/startGame"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableLeft="@drawable/play"
            android:text="@string/start" />

        <Button
            android:id="@+id/bonusLevels"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:contentDescription="@string/bonus_levels"
            android:drawableLeft="@drawable/star_grey"
            android:text="@string/bonus_levels" />

        <Button
            android:id="@+id/settings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableLeft="@drawable/settings"
            android:text="@string/settings" />

        <Button
            android:id="@+id/about"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:drawableLeft="@drawable/about"
            android:text="@string/about" />
    </LinearLayout>

</LinearLayout>